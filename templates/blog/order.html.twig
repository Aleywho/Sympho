{% extends 'base.html.twig' %}

{% block body %}

<h1>Récapitulatif</h1>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>


        <tr>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Date de naissance</th>
            <th>Type de billet</th>
            <th>Prix</th>
        </tr>

        </thead>

        {% for billet in infos.billets %}
            <tr>
                <td>{{ billet.prenom }}</td>
                <td>{{ billet.nom }}</td>
                <td>{{ billet.datedenaissance|date('d/m/Y') }}</td>
                {% if billet.tarifReduit == false %}
                    <td>Tarif normal</td>
                {% else  %}
                    <td>Tarif réduit</td>
                {% endif %}
                <td>{{ billet.prix }}</td>

            </tr>
        {% endfor %}

        <thead>

        <tr>

            <th>Prénom</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Date de visite</th>
            <th>Total</th>

        </tr>
        </thead>
        <tbody>
        <tr>

            <td>{{ infos.prenom }}</td>
            <td>{{ infos.nom }}</td>
            <td>{{ infos.email }}</td>
            <td>{{ infos.dateVisit|date('d/m/Y') }}</td>
            <td>{{ infos.total }}</td>

        </tr>


        </tbody>
    </table>
</div>



    <!-- Create a button that your customers click to complete their purchase. Customize the styling to suit your branding. -->
    <button
            style="background-color:#6772E5;color:#FFF;padding:8px 12px;border:0;border-radius:4px;font-size:1em"
            id="checkout-button-sku_F63fvnqgjvA1md"
            role="link"
    >
        Payer
    </button>

    <div id="error-message"></div>

    <!-- Load Stripe.js on your website. -->
    <script src="https://js.stripe.com/v3"></script>
    <script>
        var stripe = Stripe('pk_test_z16N614eB2vZ55wxNgFCtZ8900dEpyRlOB');

        var checkoutButton = document.getElementById('checkout-button-sku_F63fvnqgjvA1md');
        checkoutButton.addEventListener('click', function () {
            // When the customer clicks on the button, redirect
            // them to Checkout.
            stripe.redirectToCheckout({
                items: [{sku: 'sku_F63fvnqgjvA1md', quantity: 1}],

                // Do not rely on the redirect to the successUrl for fulfilling
                // purchases, customers may not always reach the success_url after
                // a successful payment.
                // Instead use one of the strategies described in
                // https://stripe.com/docs/payments/checkout/fulfillment
                successUrl: window.location.protocol + '{{ path('sucess',{'id':infos.id})}}',
                cancelUrl: 'https://your-website.com/canceled',
            })
                .then(function (result) {
                    if (result.error) {
                        // If `redirectToCheckout` fails due to a browser or network
                        // error, display the localized error message to your customer.
                        var displayError = document.getElementById('error-message');
                        displayError.textContent = result.error.message;
                    }
                });
        });
    </script>

{% endblock %}
